<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">ToDo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">{{ 'nav.home'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('note_index') }}">{{ 'nav.notes'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('category_index') }}">{{ 'nav.categories'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('todoList_index') }}">{{ 'nav.todo_lists'|trans }}</a>
                </li>
            </ul>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div>{{ app.user.email }}&nbsp;</div>
                <div>
                    <a href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a>
                </div>
            {% else %}
                <div>
                    <a href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a>
                </div>
            {% endif %}
        </div>
    </nav>
</header>